# Database Configuration
mongo_connection = ""

# JWT Configuration
JWT_SECRET=your-very-secure-secret-key-here-12345
JWT_EXPIRES_IN=24h

# Email Configuration (Development Settings - emails will be logged to console)
# For production, replace with your SMTP server details
EMAIL_HOST=localhost
EMAIL_PORT=1025  # Default port for maildev
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=development@expensetracker.com

# In development, set SEND_EMAILS=true to send real emails
SEND_EMAILS=false

# Application URLs
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:8000

# Application Settings
NODE_ENV=development
PORT=8000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # limit each IP to 100 requests per window

# Security
COOKIE_SECRET=your-cookie-secret-here
CSRF_SECRET=your-csrf-secret-here

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# CORS
CORS_ORIGIN=http://localhost:3000
